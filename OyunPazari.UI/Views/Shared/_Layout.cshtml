        <script>
             function GetCartData() {
                $.getJSON("@Url.Action("List","Cart")", function (data) {
                    $("#list-items div").remove();
                    var count = Object.keys(data).length;

                    var totalAmount = 0;

                    if (count > 0) {
                        $.each(data, function (key,item) {
                            $("#list-items").append("<div class='product-widget'><div class='product-img'><img src='" + item.ImagePath + "' alt=''></div><div class='product-body'><h3 class='product-name'><a href='#'>" + item.ProductName + "</a></h3><h4 class='product-price'><span class='qty'>" + item.Quantity + "x</span>$" + item.UnitPrice + "</h4></div><button class='delete'><i class='fa fa-close'></i></button></div>");
                            totalAmount += (item.Quantity * item.UnitPrice);
                        })
                    }
                    $("#subtotal").html("$" + totalAmount);
                    $("#cartItemCount").html(count);
                    $(".qty").html(count);
                })
            }

            function GetProductCount() {
                $.ajax({
                    type: "GET",
                    dataType: "Json",
                    url: "@Url.Action("CartItemCount","Cart",new { area="Member"})",
                    success: function (data) {
                        $(".qty").html(data);
                    }
                })
            }




            $(".add-to-cart-btn").click(function () {

                //id yakalama
                var id = $(this).attr("val");

                console.log(id);

                $.ajax({
                    type: "POST",
                    dataType: "Json",
                    url: "@Url.Action("Add","Cart")/" + id,
                    success: function (data) {
                        console.log(data);
                        $(".qty").html(data.length);
                        //Yeni Ürün sayısını çek.
                    }
                })

            })



        </script>

