
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}




@model List<OyunPazari.Model.Entities.Order>



<div class="col-md-12">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Sipariş Kodu</th>
                <th>Müşteri Kullanıcı Adı</th>
                <th>Müşteri Email</th>
                <th>Sipariş Tarihi</th>
                <th>Onay Durumu</th>
                <th colspan="2">Sipariş Detay</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.AppUser.UserName</td>
                    <td>@item.AppUser.Email</td>
                    <td>@item.OrderDate</td>
                    <td>@item.OrderStatus</td>
                    <td>
                        <a href="/Admin/Order/Detail/@item.ID">Sipariş Detayını Görüntüle</a>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>