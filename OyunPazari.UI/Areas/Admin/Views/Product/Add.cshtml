
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model List<OyunPazari.Model.Entities.Category>


    <form action="/Admin/Product/Add" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label for="Name">
                Ürün Adı
            </label>
            <input name="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label for="UnitsInStock">
                Ürün Stok Adedi
            </label>
            <input name="UnitsInStock" class="form-control" />
        </div>

        <div class="form-group">
            <label for="UnitPrice">
                Ürün Fiyatı
            </label>
            <input name="UnitPrice" class="form-control" />
        </div>

        <div class="form-group">
            <label for="DisplayOnWeb">
                Webde Göster
            </label>
            <input type="checkbox" data-val="true" value="true" name="DisplayOnWeb" class="checkbox" />
        </div>


        <div class="form-group">
            <label for="DisplayOnMobile">
                Mobilde Göster
            </label>
            <input type="checkbox" data-val="true" value="true" name="DisplayOnMobile" class="checkbox" />
        </div>



        <div class="form-group">
            <label for="Features">
                Ürün Özellikleri
            </label>
            <textarea name="Features" class="form-control" rows="5"></textarea>
        </div>


        <div class="form-group">
            <label for="CategoryID">
                Ürün Kategorisi
            </label>
            <select class="form-control" name="CategoryID">
                @foreach (var item in Model)
                {
                    <option value="@item.ID">@item.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="Image">
                Ürün Görseli
            </label>
           <input type="file" name="Image" class="form-control"/>
        </div>


        <input type="submit" value="Ekle" class="form-control btn btn-primary" />

    </form>

