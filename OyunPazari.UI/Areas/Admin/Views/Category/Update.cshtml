
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@model OyunPazari.Model.Entities.Category


    <form action="/Admin/Category/Update" method="post">

        <div class="form-group">
            <label for="ID">
                Kategori ID
            </label>
            <input name="ID" readonly class="form-control" value="@Model.ID" />
        </div>

        <div class="form-group">
            <label for="Name">
                Kategori Adı
            </label>
            <input name="Name" class="form-control" value="@Model.Name" />
        </div>

        <div class="form-group">
            <label for="Description">
                Kategori Açıklaması
            </label>
            @*<input name="Description" class="form-control" />*@
            <textarea name="Description" class="form-control" rows="5">@Model.Description</textarea>
        </div>

        <input type="submit" value="Güncelle" class="form-control btn btn-primary" />

    </form>
